{
    "manifest_version": 2,
    "version": "1.0.3",
    "name": "搜索加速",
    "description": "搜索加速,预先获取了跳转链接 ,支持 google ,baidu",
    "minimum_chrome_version":"22.0",
    "background": {
        "page": "background.html"
    },
    "icons": {
        "48": "ico.png"
    },
    
    "permissions": [
    "tabs",
    "webRequest",
    "http:\/\/*\/*",
    "https:\/\/*\/*"
    ],

    "content_scripts": [{
        "js":	["js/util.js","js/content_script.js"],
        "matches": [
        "http://www.google.com/*",
        "http://www.google.com.hk/*",
        "https://www.google.com.hk/*",
        "https://www.google.com/*",
       "http://www.baidu.com/*"
        ],
        "run_at": "document_end",
        "all_frames" : false
    }]
}
